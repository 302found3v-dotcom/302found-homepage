---
import Patita from "/public/patita.svg";
import GitHub from "../components/icons/GitHub.astro";
import { Toggle } from "astro-theme-toggle";
import Menu2 from "../components/icons/Menu-2.astro";

const navLinks = [
  {
    id: "work",
    href: "/work",
    name: "Work",
  },
  {
    id: "posts",
    href: "/posts",
    name: "Posts",
  },
  {
    id: "wallpapers",
    href: "https://store.craftz.dog",
    name: "Wallpapers",
    rel: "noopener noreferrer",
    target: "_blank",
  },
  {
    id: "uses",
    href: "/uses",
    name: "Uses",
  },
  {
    id: "source",
    href: "https://github.com/302found3v-dotcom/302found-homepage",
    name: "Source",
    rel: "noopener noreferrer",
    target: "_blank",
    icon: true,
  },
];
---

<header>
  <nav>
    <a class="marker" href="/" aria-label="Home">
      <Patita class="icon" />
      <span>Juan Alberto</span>
    </a>

    <div class="links">
      <ul class="list">
        {
          navLinks.map((link) => (
            <li id={link.id}>
              <a
                rel={link.rel && link.rel}
                target={link.target && link.target}
                class="nav-link"
                href={link.href}
                aria-current={
                  link.href === Astro.url.pathname ? "page" : undefined
                }
              >
                {link.icon && <GitHub class="github-icon" />}
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="open-buttons">
      <Toggle style="width: 25px; height: 25px;" />
      <button class="menu-toggle" aria-label="Open Menu"><Menu2 /></button>
    </div>

    <div class="page-bg"></div>
  </nav>
</header>

<style>
  header {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    padding: 0.5rem;
    font-size: 1.05em;
    margin: 0 auto;
    background-color: var(--header-bg-color);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 1;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    width: min(768px, 100%);
    margin: auto;
    padding: 0.3rem;
  }

  .marker {
    list-style: none;
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
    font-weight: bold;
    gap: 0.2rem;
  }

  .list {
    display: flex;
    gap: 1.2rem;
    list-style: none;
    margin: 0;
  }

  .nav-link {
    text-decoration: none;
    color: inherit;
    padding: 5px;
    display: flex;
    align-items: center;
    gap: 0.2rem;
  }

  .nav-link:hover {
    text-decoration: underline;
  }

  .icon {
    transition: transform 0.3s ease-in-out;
  }

  .marker:hover .icon {
    transform: rotate(20deg);
  }

  .nav-link.active {
    background-color: var(--header-active-color);
  }

  .open-buttons {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    justify-content: center;
  }

  .menu-toggle {
    display: none;
    cursor: pointer;
    color: inherit;
    background-color: transparent;
    border: 1px solid rgba(255, 255, 255, 0.16);
    border-radius: 5px;
    padding: 2px 8px;
  }

  .menu-toggle:hover {
    background-color: rgba(255, 255, 255, 0.16);
  }

  .github-icon {
    display: inline-block;
  }

  @media (max-width: 768px) {
    nav {
      padding: 0.3rem;
      margin: 0 auto;
    }

    .menu-toggle {
      display: inline-block;
      z-index: 3;
    }

    .links.active .github-icon {
      display: none;
    }

    .links {
      position: absolute;
      top: 100%;
      right: 15px;
      background-color: rgb(45, 55, 72);
      width: 250px;
      border-radius: 10px;
      overflow: hidden;
      opacity: 0;
      transform: scale(0.95);
      transition:
        opacity 0.3s ease,
        transform 0.3s ease;
      pointer-events: none;
    }

    .links.active {
      z-index: 2;
      opacity: 1;
      transform: scale(1);
      pointer-events: auto;
    }

    .page-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: transparent;
      opacity: 0;
      transform: scale(0.95);
      transition:
        opacity 0.3s ease,
        transform 0.3s ease;
      pointer-events: none;
    }

    .page-bg.active {
      z-index: 1;
      opacity: 1;
      transform: scale(1);
      pointer-events: auto;
    }

    .list {
      flex-direction: column;
      gap: 0;
    }

    #work:hover {
      background-color: rgba(255, 255, 255, 0.16);
      color: white;
    }

    .nav-link {
      padding: 10px;
    }

    nav {
      flex-wrap: wrap;
    }
  }
</style>

<script>
  const menuToggle = document.querySelector(".menu-toggle");
  const links = document.querySelector(".links");
  const pageBg = document.querySelector(".page-bg");

  function closeMenu() {
    links?.classList.remove("active");
    pageBg?.classList.remove("active");
  }

  menuToggle?.addEventListener("click", () => {
    links?.classList.toggle("active");
    pageBg?.classList.toggle("active");
  });

  pageBg?.addEventListener("click", closeMenu);

  const navLinks = document.querySelectorAll(".nav-link");
  const currentPath = window.location.pathname;

  navLinks.forEach((link) => {
    if (link.getAttribute("href") === currentPath) {
      link.classList.add("active");
    } else {
      link.classList.remove("active");
    }
  });
</script>
