---
import Patita from '/public/patita.svg';
import GitHub from '/public/github.svg';
import { Toggle } from 'astro-theme-toggle';
---

<header>
    <nav>
        <div>
            <a class="marker" href="/" aria-label="Home">
                <Patita class="icon" />
                <span>Juan Alberto</span>
            </a>

            <div class="links">
                <ul class="list">
                    <li><a href="/work">Work</a></li>
                    <li><a href="/posts">Posts</a></li>
                    <li><a href="https://store.craftz.dog" target="_blank" rel="noopener noreferer">Wallpapers</a></li>
                    <li><a href="mailto:jarscode.dev@outlook.com">Contact</a></li>
                    <li><a href="https://github.com/302foundevx/302found-homepage" rel="noopener noreferer" target="_blank"><span class="source"><GitHub />Source</span></a></li>
                </ul>
            </div>

            <Toggle style="width: 25px; height: 25px;" />
        </div>

    </nav>
</header>

<style>
    nav {
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        padding: 0.5rem;
        font-size: 1.05rem;
        margin: 0 auto;
        background-color: var(--header-bg-color);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        z-index: 1;
    }

    nav > div {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1.5rem;
        width: 768px;
        margin: auto;
    }

    .theme {
        display: flex;
        align-items: center;
    }

    .theme button {
        display: flex;
        border: none;
        border-radius: .375rem;
        cursor: pointer;
        color: #202023;
        background-color: rgb(251, 212, 141);
    }

    .marker {
        list-style: none;
        text-decoration: none;
        color: inherit;
        display: flex;
        align-items: center;
        font-weight: bold;
        gap: .2rem;
    }

    .links {
      padding-right: 50px;
    }

    .list {
        display: flex;
        margin: 10px 0;
        padding: 0;
        gap: 1.2rem;
        list-style: none;
    }

    .list li a {
        text-decoration: none;
        color: inherit;
    }

    .list li a:hover {
      text-decoration: underline;
    }

    .icon {
        transition: transform 0.3s ease-in-out;
    }

    .marker:hover .icon {
        transform: rotate(20deg);
    }

    .source {
        display: flex;
        align-items: center;
        gap: .2rem;
    }

    .source svg {
        height: 1rem;
        width: 1rem;
        fill: var(--header-svg-fill);
    }

    .theme-icon {
        position: absolute;
        height: 1.3rem;
        width: 1.3rem;
        opacity: 0;
        transform: scale(0.5) rotate(-90deg);
        transition: all 0.4s ease;
        pointer-events: none;
    }

    .theme-icon.active {
        opacity: 1;
        transform: scale(1) rotate(0deg);
        pointer-events: auto;
    }

    .theme button {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.2rem;
        height: 2.2rem;
        border: none;
        border-radius: .375rem;
        background-color: #805AD5;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .theme button:hover {
        background-color: #6B46C1;
    }

    html.dark .theme button {
        background-color: rgb(251, 212, 141);
        color: #202023;
        transition: background-color 0.3s;
    }

    html.dark .theme button:hover {
        background-color: rgb(255, 205, 69);
    }
</style>
