---
import Email from "../components/icons/Email.astro";
import Location from "../components/icons/Location.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Twitter from "../components/icons/X.astro";

const socials = [
  {
    name: "Email",
    icon: Email,
    href: "mailto:jarscode.dev@outlook.com",
    className: "email"
  },
  {
    name: "LinkedIn",
    icon: LinkedIn,
    href: "https://linkedin.com/in/302foundev",
    className: "linkedin"
  },
  {
    name: "Twitter",
    icon: Twitter,
    href: "https://twitter.com/302foundev",
    className: "twitter"
  }
]
---


<section class="section">

  <div class="hero">
    <span>Hello, I'm an web app developer based in Madrid!</span>
  </div>

  <div class="craft">
    <div>
      <h1>Juan Alberto</h1>
      <p>Digital Craftsman ( Artist / Developer / C-Creator )</p>
    </div>

    <img src="/profile.webp" loading="eager" alt="Juan Alberto's profile picture" />
  </div>

  <div class="location">
    <Location />
    <span>Matrix, The real world</span>
  </div>

    <div class="socials">
      {socials.map((social) => {
        return (
          <a href={social.href} target="_blank" rel="noopener noreferrer" class={social.className}>
            <social.icon />
            <span>{social.name}</span>
          </a>
        )
      })}
  </div>

</section>

<style>
  .section {
    flex-direction: column;
    margin: 10rem auto 3rem auto;
  }

  .section, .hero {
    width: 100%;
    display: flex;
  }

  .hero {
    justify-content: center;
    align-items: center;
  }

  .hero span {
    width: 100%;
    text-align: center;
    border-radius: .5rem;
    background-color: var(--hero-bg-color);
    font-size: 15px;
    padding: 0.7rem;
  }

  .craft {
    margin-top: 1.2rem;
    justify-content: space-between;
    display: flex;
    margin-bottom: 1rem;
  }

  .craft h1 {
    font-size: 2.3rem;
  }

  .craft p, .craft h1 {
    margin: 0;
  }

  .craft img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    border: 1px solid #fff;
    object-fit: cover;
    background-color: #fff;
  }

  .location {
    display: flex;
    align-items: center;
    gap: .1rem;
    margin-bottom: 10px;
  }

  .socials {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .socials svg {
    width: 20px;
    height: 20px;
  }

  .email, .linkedin, .twitter {
    display: flex;
    align-items: center;
    gap: .5rem;
    border: 2px solid var(--hero-bg-color);
    padding: .25rem;
    border-radius: .5rem;
    text-decoration: none;
    color: inherit;
  }

  .email:hover {
    background-color: var(--email-link-color);
    color: #fff;
    transform: translateY(-2px);
    transition: all .2s ease-in-out;
    border-color: var(--email-link-color);
  }

  .linkedin:hover {
    background-color: var(--linkedin-link-color);
    color: #fff;
    transform: translateY(-2px);
    transition: all .2s ease-in-out;
    border-color: var(--linkedin-link-color);
  }

  .twitter:hover {
    background-color: var(--twitter-link-color);
    color: #fff;
    transform: translateY(-2px);
    transition: all .2s ease-in-out;
    border-color: var(--twitter-link-color);
  }

  @media (max-width: 768px) {
    .craft {
      flex-direction: column-reverse;
      align-items: center;
      gap: 1rem;
      margin-bottom: 2rem;
    }
    
    .craft h1 {
      font-size: 1.8rem;
      text-align: center;
    }
  }
</style>
